<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <component>
	<component-type>com.sun.jsft.component.fragment.DeferredFragment</component-type>
	<component-class>com.sun.jsft.component.fragment.DeferredFragment</component-class>
    </component>
    <component>
	<component-type>com.sun.jsft.component.fragment.FragmentRenderer</component-type>
	<component-class>com.sun.jsft.component.fragment.FragmentRenderer</component-class>
    </component>

    <managed-bean>
	<managed-bean-name>jsft</managed-bean-name>
	<managed-bean-class>com.sun.jsft.commands.JSFTCommands</managed-bean-class>
	<managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

</faces-config>

